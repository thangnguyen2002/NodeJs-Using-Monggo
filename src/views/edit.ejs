<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit A User</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create Users</a>
    </div>
    <!-- <%= JSON.stringify(userEdit) %> -->
    <div class="form-add-new">
        <form action="/update-user" method="post">
            <fieldset>
                <legend>Edit a user</legend>
                <div class="input-group d-none">
                    <label>Id: </label>
                    <input type="text" name="userId" value="<%= userEdit.id %>">
                </div>
                <div class="input-group">
                    <label>Email: </label>
                    <input type="text" name="email" value="<%= userEdit.email %>">
                </div>
                <div class="input-group">
                    <label>Name: </label>
                    <input type="text" name="name" value="<%= userEdit.name %>">
                </div>
                <div class="input-group">
                    <label>City: </label>
                    <input type="text" class="city-input" name="city" value="<%= userEdit.city %>">
                </div>
                <div>
                    <button>Save</button>
                </div>
            </fieldset>
        </form>

    </div>
</body>

</html>